<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lakshit.assignment3.Signup"
    tools:showIn="@layout/activity_signup"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SIGN UP"
        android:id="@+id/text_signup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/text_user_signup"
        android:layout_marginTop="98dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/text_signup"
        android:layout_alignStart="@+id/text_pass_signup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/text_pass_signup"
        android:layout_marginTop="62dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/text_user_signup"
        android:layout_toStartOf="@+id/text_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/user_signup"
        android:layout_alignBottom="@+id/text_user_signup"
        android:layout_toEndOf="@+id/text_signup"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass_signup"
        android:layout_alignBottom="@+id/text_pass_signup"
        android:layout_toEndOf="@+id/text_signup"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/button_signup2"
        android:layout_below="@+id/text_pass_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="save" />
</RelativeLayout>
